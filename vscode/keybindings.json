// Place your key bindings in this file to override the defaults
[
  {
    "key": "ctrl+[BracketRight]",
    "command": "workbench.files.action.focusFilesExplorer",
    "when": "!filesExplorerFocus"
  },
  {
    "key": "ctrl+[BracketRight]",
    "command": "workbench.action.openNextRecentlyUsedEditor",
    "when": "filesExplorerFocus"
  },
  // Terminal Navigation
  {
    "key": "ctrl+0",
    "command": "terminal.focus",
    "when": "!terminalFocus"
  },
  {
    "key": "ctrl+0",
    "command": "workbench.action.openNextRecentlyUsedEditor",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus && terminalHasBeenCreated && !terminalEditorFocus || terminalFocus && terminalProcessSupported && !terminalEditorFocus"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "terminalFocus && terminalHasBeenCreated && !terminalEditorFocus || terminalFocus && terminalProcessSupported && !terminalEditorFocus"
  },
  {
    "key": "ctrl+shift+D",
    "command": "workbench.action.terminal.new",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+x",
    "command": "workbench.action.togglePanel",
    "when": "terminalFocus"
  },
  // File Explorer
  {
    "key": "a",
    "command": "explorer.newFile",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    "key": "d",
    "command": "explorer.newFolder",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    "key": "r",
    "command": "renameFile",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceReadonly && !explorerResourceIsRoot && !inputFocus"
  },
  // Navigate
  {
    "key": "ctrl+H",
    "command": "workbench.action.navigateLeft",
    "when": "(editorTextFocus && vim.active && vim.mode == 'Normal') || filesExplorerFocus"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.navigateRight",
    "when": "editorTextFocus && vim.active && vim.mode == 'Normal'"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.navigateDown",
    "when": "editorTextFocus && vim.active && vim.mode == 'Normal'"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.navigateUp",
    "when": "editorTextFocus && vim.active && vim.mode == 'Normal'"
  },
  {
    "key": "ctrl+h",
    "command": "-extension.vim_ctrl+h",
    "when": "editorTextFocus && vim.active && vim.use<C-h> && !inDebugRepl"
  },
  {
    "key": "ctrl+h",
    "command": "-editor.action.startFindReplaceAction",
    "when": "editorFocus || editorIsOpen"
  },
  {
    "key": "tab",
    "command": "workbench.action.nextEditor",
    "when": "vim.active && vim.mode == 'Normal'"
  },
  {
    "key": "shift+tab",
    "command": "workbench.action.previousEditor",
    "when": "vim.active && vim.mode == 'Normal'"
  },
  // Move Editor 
  {
    "key": "ctrl+alt+h",
    "command": "workbench.action.moveEditorToLeftGroup",
    "when": "editorTextFocus && vim.active && vim.mode == 'Normal'"
  },
  {
    "key": "ctrl+alt+l",
    "command": "workbench.action.moveEditorToRightGroup",
    "when": "editorTextFocus && vim.active && vim.mode == 'Normal'"
  },
  {
    "key": "shift+F1",
    "when": "editorHasReferenceProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor",
    "command": "editor.action.goToReferences"
  },
  // Code Action
  {
    "key": "shift+j",
    "command": "editor.action.moveLinesDownAction",
    "when": "vim.active && vim.mode != 'Insert' && editorTextFocus"
  },
  {
    "key": "shift+k",
    "command": "editor.action.moveLinesUpAction",
    "when": "vim.active && vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "ctrl+k",
    "command": "editor.action.showHover",
    "when": "vim.active && vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space c a",
    "command": "editor.action.codeAction",
    "when": "vim.active && vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space c s",
    "command": "workbench.action.gotoSymbol",
    "when": "vim.active && vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space g g",
    "command": "workbench.scm.focus",
    "when": "vim.active && vim.mode == 'Normal' && editorTextFocus"
  }
]